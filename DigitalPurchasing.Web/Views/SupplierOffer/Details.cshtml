@using DigitalPurchasing.Core
@model DigitalPurchasing.Core.Interfaces.SupplierOfferDetailsVm

@{
    ViewBag.Title = $"Подробности КП № {Model.PublicId} от {Model.CreatedOn:dd.MM.yyyy HH:mm}";
    Layout = "_Layout";
}

<h2 class="with-button">@ViewData["Title"]</h2>
<div class="btn-group">
    <a class="btn btn-default" href="@Url.Action("Edit", new { id = Model.Id })">Назад</a>
</div>
<div class="long-table-wrap">
    <div class="long-table">
        <div class="long-table-item">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th colspan="5">Запрос коммерческого предложения</th>
                        <th colspan="7">Коммерческое предложение в полученном варианте</th>
                        <th colspan="5">Расчет доли товара по стоимости и массе в итого</th>
                        <th colspan="3">Пересчет стоимости с учетом доставки @*и таможенной пошлины*@
                        <th colspan="9">Перевод коммерческих условий в ЕИ и валюту запроса</th>
                        <th colspan="7">Пересчет стоимости по количеству в запросе с учетом @*пошлины и*@ доставки и ресурса</th>
                    </tr>
                    <tr>
                        <th>Код</th>
                        <th>Наименование</th>
                        <th>Валюта</th>
                        <th>ЕИ</th>
                        <th>Кол-во,<br />ЕИ</th>

                        <th>Код</th>
                        <th>Наименование</th>
                        <th>Валюта КП</th>
                        <th>ЕИ КП</th>
                        <th>Кол-во КП,<br />ЕИ КП</th>
                        <th>Цена в КП,<br />валюта КП за ЕИ КП</th>
                        <th>Стоимость<br />количества КП,<br />валюта КП</th>

                        <th>Доля<br />стоимости<br />позиции<br />в общей<br />стоимости</th>
                        <th>Масса 1 ЕИ<br />товара,<br />ед изм массы</th>
                        <th>ЕИ массы</th>
                        <th>Масса<br />количества<br />в заявке,<br />ед массы</th>
                        <th>Доля массы<br />позиции в<br />общей массе</th>

                        @*<th>Таможенная<br />пошлина,<br />проценты</th>
                        <th>Минимальная<br />пошлина,<br />валюта КП<br />за ЕИ КП</th>
                        <th>Таможенная<br />пошлина,<br />в валюте КП</th>*@
                        <th>Доставка,<br />валюта КП</th>
                        <th>Стоимость<br />количества в запросе<br />с учетом @*пошлины<br />и*@ доставки,<br />валюта КП</th>
                        <th>Цена с учетом@*<br />пошлины<br />и*@ доставки,<br />валюта запроса<br />за ЕИ КП</th>

                        <th>ЕИ<br />запроса</th>
                        <th>ЕИ<br />КП</th>
                        <th>Валюта<br />запроса</th>
                        <th>Валюта<br />КП</th>
                        <th>Коэффициент<br />перевода<br />из ЕИ<br />предложения<br />в ЕИ запроса</th>
                        <th>Курс валют<br />для перевода<br />из валюты КП<br />в валюту<br />запроса</th>
                        <th>Количество<br />в КП,<br />ЕИ запроса</th>
                        <th>Цена в КП,<br />валюта<br />запроса<br />за ЕИ<br />запроса</th>
                        <th>Стоимость<br />количества<br />КП,<br />валюта<br />запроса</th>

                        <th>Название ресурса</th>
                        <th>ЕИ<br />ресурса</th>
                        <th>Ресурс<br />товара<br />в КП</th>
                        <th>Ресурс<br />товара<br />в запросе</th>
                        <th>Коэффициент<br />для учета<br />ресурса<br />предложенной<br />позиции в цене</th>
                        <th>Цена с учетом @*пошлины,*@<br />доставки и учетом<br />ресурса по отношению<br />к номенклатуре в запросе,<br />валюта запроса за ЕИ запроса</th>
                        <th>Стоимость количества<br />в запросе с учетом @*пошлины,*@<br />доставки и учетом ресурса<br />по отношению к номенклатуре<br />в запросе, валюта КП</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th colspan="4"></th>
                        <th class="align-right">@Model.Items.Sum(q => q.Request.Qty).ToString(Consts.Format.Qty)</th>

                        <th colspan="4"></th>
                        <th class="align-right">@Model.Items.Sum(q => q.Offer.Qty).ToString(Consts.Format.Qty)</th>
                        <th></th>
                        <th class="align-right">@Model.Items.Sum(q => q.Offer.TotalPrice).ToString(Consts.Format.Money)</th>

                        <th class="align-right">@Model.Items.Sum(q => q.Mass.TotalPricePerc).ToString("P1")</th>
                        <th colspan="2"></th>
                        <th class="align-right">@Model.Items.Sum(q => q.Mass.TotalMass).ToString(Consts.Format.Money)</th>
                        <th class="align-right">@Model.Items.Sum(q => q.Mass.TotalMassPerc).ToString("P1")</th>

                        @*<th colspan="2"></th>
                        <th>@Model.Items.Sum(q => q.ImportAndDelivery.CustomsDuty).ToString(Consts.Format.Money)</th>*@
                        <th class="align-right">@Model.Items.Sum(q => q.ImportAndDelivery.DeliveryCost).ToString(Consts.Format.Money)</th>
                        <th class="align-right">@Model.Items.Sum(q => q.ImportAndDelivery.FinalCost).ToString(Consts.Format.Money)</th>
                        <th></th>

                        <th colspan="8"></th>
                        <th class="align-right">@Model.Items.Sum(q => q.Conversion.OfferTotalPrice).ToString(Consts.Format.Money)</th>

                        <th colspan="6"></th>
                        <th class="align-right">@Model.Items.Sum(q => q.ResourceConversion.OfferTotalPrice).ToString(Consts.Format.Money)</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Request.Code</td>
                            <td>@item.Request.Name</td>
                            <td>@item.Request.Currency</td>
                            <td>@item.Request.Uom</td>
                            <td class="align-right">@item.Request.Qty.ToString(Consts.Format.Qty)</td>

                            <td>@item.Offer.Code</td>
                            <td>@item.Offer.Name</td>
                            <td>@item.Offer.Currency</td>
                            <td>@item.Offer.Uom</td>
                            <td class="align-right">@item.Offer.Qty.ToString(Consts.Format.Qty)</td>
                            <td class="align-right">@item.Offer.Price.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.Offer.TotalPrice.ToString(Consts.Format.Money)</td>

                            <td class="align-right">@item.Mass.TotalPricePerc.ToString("P1")</td>
                            <td class="align-right">@item.Mass.MassOf1.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.Mass.MassUom</td>
                            <td class="align-right">@item.Mass.TotalMass.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.Mass.TotalMassPerc.ToString("P1")</td>

                            @*<td>@item.ImportAndDelivery.CustomsDutyPerc.ToString("P1")</td>
                            <td>@item.ImportAndDelivery.MinCustomsDuty.ToString(Consts.Format.Money)</td>
                            <td>@item.ImportAndDelivery.CustomsDuty.ToString(Consts.Format.Money)</td>*@
                            <td class="align-right">@item.ImportAndDelivery.DeliveryCost.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.ImportAndDelivery.FinalCost.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.ImportAndDelivery.FinalCostCostPer1.ToString(Consts.Format.Money)</td>

                            <td>@item.Request.Uom</td>
                            <td>@item.Offer.Uom</td>
                            <td>@item.Request.Currency</td>
                            <td>@item.Offer.Currency</td>
                            <td class="align-right">@item.Conversion.UomRatio.ToString(Consts.Format.Qty)</td>
                            <td class="align-right">@item.Conversion.CurrencyExchangeRate.ToString(Consts.Format.Qty)</td>
                            <td class="align-right">@item.Conversion.OfferQty.ToString(Consts.Format.Qty)</td>
                            <td class="align-right">@item.Conversion.OfferPrice.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.Conversion.OfferTotalPrice.ToString(Consts.Format.Money)</td>

                            <td>@item.ResourceConversion.ResourceUom</td>
                            <td>@item.ResourceConversion.ResourceBatchUom</td>
                            <td>@item.ResourceConversion.OfferResource.ToString(Consts.Format.Money)</td>
                            <td>@item.ResourceConversion.RequestResource.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.ResourceConversion.ResourceRatio.ToString(Consts.Format.Qty)</td>
                            <td class="align-right">@item.ResourceConversion.OfferPrice.ToString(Consts.Format.Money)</td>
                            <td class="align-right">@item.ResourceConversion.OfferTotalPrice.ToString(Consts.Format.Money)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
