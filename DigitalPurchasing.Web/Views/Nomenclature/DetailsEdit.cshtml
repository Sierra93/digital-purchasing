@using DigitalPurchasing.Core
@model DigitalPurchasing.Web.ViewModels.Nomenclature.NomenclatureAlternativeEditVm

@{
    ViewData["Title"] = $"Редактирование \"{Model.Name}\" ({Model.ClientName})";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DetailsEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClientType" class="control-label"></label>
                <input asp-for="ClientTypeStr" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatchUomId" class="control-label"></label>
                <select asp-for="BatchUomId" class="form-control" asp-items="Model.BatchUoms"></select>
                <span asp-validation-for="BatchUomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MassUomId" class="control-label"></label>
                <select asp-for="MassUomId" class="form-control" asp-items="Model.MassUoms"></select>
                <span asp-validation-for="MassUomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MassUomValue" class="control-label"></label>
                <input asp-for="MassUomValue" asp-is-invariant="true" class="form-control" />
                <span asp-validation-for="MassUomValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceUomId" class="control-label"></label>
                <select asp-for="ResourceUomId" class="form-control" asp-items="Model.ResourceUoms"></select>
                <span asp-validation-for="ResourceUomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceUomValue" class="control-label"></label>
                <input asp-for="ResourceUomValue" asp-is-invariant="true" class="form-control" />
                <span asp-validation-for="ResourceUomValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceBatchUomId" class="control-label"></label>
                <select asp-for="ResourceBatchUomId" class="form-control" asp-items="Model.ResourceBatchUoms"></select>
                <span asp-validation-for="ResourceBatchUomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить" />
                <a asp-action="Index" class="btn btn-default">Отмена</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
