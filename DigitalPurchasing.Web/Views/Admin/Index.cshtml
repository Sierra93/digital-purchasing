@model DigitalPurchasing.Core.Interfaces.AdminDashboardDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Статистика</h2>

<ul>
    <li>Кол-во организаций: @Model.CompaniesCount</li>
    <li>Кол-во пользователей: @Model.UsersCount (подтвердили e-mail @Model.ConfirmedUsersCount)</li>
</ul>

<h3 class="with-button">Условия использования сайта</h3>
<div class="btn-group">
    @if (Model.TermsUploaded)
    {
        <a asp-action="DownloadTerms" class="btn btn-default">Скачать</a>
    }
    <form method="post" enctype="multipart/form-data" asp-action="UploadTerms" class="btn btn-default btn-file">
        <label>
            Загрузить
            <input type="file" style="display: none;" name="file">
        </label>
    </form>
</div>
